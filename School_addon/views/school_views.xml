<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id='student_information_list_view' model="ir.ui.view" >
        <field name="name">student.information.list.view</field>
        <field name="model">student_information</field>
        <field name="arch" type="xml">
            <list>
                <field name= "name"></field>
                <field name= "Age"></field>
                <field name= "roll_number"></field>
                <field name= "branch"></field>
            </list>
        </field>
    </record>
    


    <record id='student_information_form_view' model="ir.ui.view" >
        <field name="name">student.information.list.view</field>
        <field name="model">student_information</field>
        <field name="arch" type="xml">
            <form>
                <strong>Name : <field name= "name"></field></strong>
                <strong>Age : <field name= "Age"></field></strong>
                <strong>Roll Number : <field name= "roll_number"></field></strong>
                <strong>Branch : <field name= "branch"></field></strong>
            </form>
        </field>
    </record>




    <record id='student_information_kanban_view' model='ir.ui.view'>
        <field name = "name">student.kanban.view</field>
        <field name="model">student_information</field>
        <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
            <field name="name"></field>
            <templates>
                <t t-name='kanban-box'>
                    <div t-attf-class="oe_kanban_card">
                    <div class="row">
                    <div class="col-6">
                        <field name="name"/>
                        <field name="Age"/>
                        <field name="roll_number"/>
                        <field name="branch"/>
                    </div>
                       </div>
                </div>
                </t>
            </templates>
        </kanban>
        </field>
    </record>




     <record id ="student_data" model="ir.actions.act_window">
        <field name="name">Student Detail</field>
        <field name="res_model">student_information</field>
        <field name="view_mode">list,form</field>
    </record>     




        <record id='teacher_information_list_view' model="ir.ui.view" >
        <field name="name">teacher.information.list.view</field>
        <field name="model">teacher_information</field>
        <field name="arch" type="xml">
            <list>
                <field name= "name"></field>
                <field name= "Age"></field>
                <field name= "subject"></field>
            </list>
        </field>
    </record>
    


    <record id='teacher_information_form_view' model="ir.ui.view" >
        <field name="name">teacher.information.list.view</field>
        <field name="model">teacher_information</field>
        <field name="arch" type="xml">
            <form>
                <strong>Name : <field name= "name"></field></strong>
                <strong>Age : <field name= "Age"></field></strong>
                <strong>Subject : <field name= "subject"></field></strong>

            </form>
        </field>
    </record>


    
    <record id ="teacher_data" model="ir.actions.act_window">
        <field name="name">Teacher Detail</field>
        <field name="res_model">teacher_information</field>
        <field name="view_mode">list,form</field>
    </record>     
    
     <menuitem id="school_details_" name="School"/>

    <menuitem id='student_info' name="Student data" action="student_data" parent="school_details_" sequence="10"/>

    <menuitem id='teacher_info1' name="Teacher data"  parent="school_details_" sequence="20"/>
    <menuitem id="config_det" name="Configuration" parent="school_details_" sequence="30"></menuitem>
  


</odoo>